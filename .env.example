# Physical AI & Humanoid Robotics Textbook
# Environment Variables Configuration
#
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================================================
# OpenAI Configuration (Required for RAG Chatbot)
# ============================================================================

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx

# OpenAI Model Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# ============================================================================
# Qdrant Vector Database Configuration
# ============================================================================

# Get from: https://qdrant.tech/ (free tier)
QDRANT_URL=https://xxxxxxxx-xxxxxxxx.qdrant.io
QDRANT_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
QDRANT_COLLECTION_NAME=robotics_lessons

# ============================================================================
# Neon Postgres Database Configuration
# ============================================================================

# Get from: https://neon.tech/ (free tier)
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# ============================================================================
# Better-Auth Configuration
# ============================================================================

# Better-Auth Settings
BETTER_AUTH_SECRET=your-secret-key-here

# OAuth Providers (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# Deployment Configuration
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Backend URL
BACKEND_URL=http://localhost:8000

# ============================================================================
# Optional Services
# ============================================================================

# Render.com (for API deployment)
RENDER_DEPLOY_HOOK=https://api.render.com/deploy/srv-xxx

# Railway.app (for API deployment)
RAILWAY_TOKEN=your-railway-token

# Sentry (Error tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================================================
# Development Settings
# ============================================================================

DEBUG=True
LOG_LEVEL=INFO
